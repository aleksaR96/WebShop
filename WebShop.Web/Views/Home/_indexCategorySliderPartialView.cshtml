<div class="container-fluid my-3 bg-light py-3 border-bottom rounded d-none d-lg-block">
    <p class="text-dark text-uppercase h3"><a asp-controller="Category" asp-action="Index" style="text-decoration: none"><i class="fa fa-th-large"></i> Kategorije</a></p>

    <div class="carousel slide my-3" id="kategorijeCarousel" data-ride="carousel">

        <div class="carousel-inner">

            @{ var active = "active";}

            @for (int i = 0; i < Model.listOfCategories.Count; i+=3)
            {

                if(i > 0)
                {
                    active = "";
                }

                <div class="carousel-item @active">
                    <div class="row">

                        @for (int j = i; (j - i) < 3 && j < Model.listOfCategories.Count; j++)
                        {
                            <div class="col-md-4 kategorija">
                                <a asp-controller="Products" asp-action="ViewProducts" asp-route-id="@Model.listOfCategories[j].CategoryID" class="d-block">
                                    <div class="kategorijaPozadina"></div>
                                    <p class="kategorijaOverlay h3 p-3">@Model.listOfCategories[j].CategoryName</p>
                                    <img src="~/img/categories/@(Model.listOfCategories[j].Image)" alt="@Model.listOfCategories[j].CategoryName" class="img-responsive">
                                </a>
                            </div>
                        }

                    </div>
                </div>
            }

        </div>

        <a href="#kategorijeCarousel" data-slide="prev" class="carousel-control-prev kategorijeKomande"><span class="carousel-control-prev-icon"></span></a>
        <a href="#kategorijeCarousel" data-slide="next" class="carousel-control-next kategorijeKomande"><span class="carousel-control-next-icon"></span></a>

    </div>

    <p class="text-center pb-0 mb-0"><a asp-controller="Category" asp-action="Index">Vidi sve kategorije</a></p>

</div>
