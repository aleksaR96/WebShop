<!--OVDE JE DEO ZA POPULARNE PROIZVODE-->

<div class="container-fluid my-3 mt-5 py-3 border-bottom rounded">

    @{ var active = "active"; }

    <p class="text-dark text-uppercase h3"><span class="text-primary"><i class="fa fa-star"></i></span> Popularno</p>

    <div class="carousel slide my-3" id="popularCarousel" data-ride="carousel" data-pause="false">

        <div class="carousel-inner">
            @{ active = "active"; }

            @for (int i = 0; i < Model.listOfPinnedProducts.popularProducts.Count; i += 4)
            {
                @if (i > 0)
                {
                    active = "";
                }
                <div class="carousel-item @active">
                    <div class="row">

                        @for (int j = i; (j - i < 4) && (j < Model.listOfPinnedProducts.popularProducts.Count); j++)
                        {
                            <div class="mt-3 mt-md-0 col-6 col-md-3">
                                <a asp-controller="Products" asp-action="GetProduct" asp-route-id="@Model.listOfPinnedProducts.popularProducts[j].ProductID">
                                    <div class="card border-0 h-100">
                                        <div class="pinned-badge popularno-badge">
                                            <span class="text-white h6 d-block text-center">Popular</span>
                                        </div>
                                        <img src="~/img/product @Model.listOfPinnedProducts.popularProducts[j].ProductID/@(Model.listOfPinnedProducts.popularProducts[j].Images[0].Image)" alt="" class="card-img-top img-fluid">
                                        <div class="card-body pb-0">
                                            <p class="h6">@Model.listOfPinnedProducts.popularProducts[j].Name</p>
                                            <p class="small">
                                                @for (int k = 0; k < Model.listOfPinnedProducts.popularProducts[j].FeaturedProperties.Count; k++)
                                                {
                                                <span>@(@Model.listOfPinnedProducts.popularProducts[j].FeaturedPropertiesName[k].Value): @(@Model.listOfPinnedProducts.popularProducts[j].FeaturedProperties[k].Value)</span><br />
                                                }
                                            </p>
                                        </div>
                                        <div class="card-footer border-0 bg-white pt-0">
                                            <p class="text-success font-weight-bold">@Model.listOfPinnedProducts.popularProducts[j].Price EUR</p>
                                            <button type="button" name="button" class="btn btn-primary btn-sm rounded-0">Detaljnije</button>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }



        </div>

    </div>

</div>

